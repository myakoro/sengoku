<Application x:Class="SengokuSLG.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:SengokuSLG.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Colors -->
        <Color x:Key="ColorBgMain">#f8f3e7</Color>
        <Color x:Key="ColorBgHeader">#e7d8b1</Color>
        <Color x:Key="ColorBgPanel">#f0e6d2</Color>
        <Color x:Key="ColorBgCard">#fff8dc</Color>
        <Color x:Key="ColorBorder">#8b4513</Color>
        <Color x:Key="ColorTextMain">#2b2b2b</Color>
        <Color x:Key="ColorAccentRed">#c73940</Color>
        <Color x:Key="ColorAccentBlue">#1d3557</Color>
        <Color x:Key="ColorAccentGreen">#2d7a3e</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BrushBgMain" Color="{StaticResource ColorBgMain}"/>
        <SolidColorBrush x:Key="BrushBgHeader" Color="{StaticResource ColorBgHeader}"/>
        <SolidColorBrush x:Key="BrushBgPanel" Color="{StaticResource ColorBgPanel}"/>
        <SolidColorBrush x:Key="BrushBgCard" Color="{StaticResource ColorBgCard}"/>
        <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColorBorder}"/>
        <SolidColorBrush x:Key="BrushTextMain" Color="{StaticResource ColorTextMain}"/>
        <SolidColorBrush x:Key="BrushAccentRed" Color="{StaticResource ColorAccentRed}"/>
        <SolidColorBrush x:Key="BrushAccentBlue" Color="{StaticResource ColorAccentBlue}"/>
        <SolidColorBrush x:Key="BrushAccentGreen" Color="{StaticResource ColorAccentGreen}"/>

        <!-- Fonts -->
        <FontFamily x:Key="FontMain">Yu Mincho, Hiragino Mincho ProN, MS Mincho, serif</FontFamily>

        <!-- Styles -->
        <Style x:Key="StyleNavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#fff8dc"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StyleActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BrushBgHeader}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BrushAccentBlue}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Background" Value="#d4c5a0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Converters -->
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <conv:DisclosureConverter x:Key="DisclosureConverter"/>
        <conv:AbilityDisclosureConverter x:Key="AbilityDisclosureConverter"/>
        <conv:BonusConverter x:Key="BonusConverter"/>
        <conv:FinalValueConverter x:Key="FinalValueConverter"/>
        <conv:RankToTextConverter x:Key="RankToTextConverter"/>
        <conv:RankToColorConverter x:Key="RankToColorConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <conv:AdvisorBonusConverter x:Key="AdvisorBonusConverter"/>
        <conv:BooleanToTextConverter x:Key="BooleanToTextConverter"/>

    </Application.Resources>
</Application>
