<Application x:Class="SengokuSLG.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:SengokuSLG.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <c:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
            <c:BooleanToTextConverter x:Key="BooleanToTextConverter"/>
            <c:BooleanToForegroundConverter x:Key="BooleanToForegroundConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
