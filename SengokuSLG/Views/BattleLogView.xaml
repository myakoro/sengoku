<UserControl x:Class="SengokuSLG.Views.BattleLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{StaticResource BrushBgMain}">
        <Border Margin="30" Background="{StaticResource BrushBgPanel}" BorderBrush="{StaticResource BrushBorder}" BorderThickness="3" CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ヘッダー -->
                <Border Grid.Row="0" Background="#8b6f47" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,0,2" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <TextBlock Text="【戦場ログ】" FontSize="24" FontWeight="Bold" Foreground="#f8f3e7" HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding Context.TurnCount, StringFormat='{}ターン{0}'}" FontSize="14" Foreground="#f8f3e7" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- メインコンテンツ（2カラム） -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左：戦術命令パネル -->
                    <Border Grid.Column="0" Background="#faf6ed" BorderBrush="{StaticResource BrushBorder}" BorderThickness="0,0,2,0" Padding="30,20">
                        <StackPanel>
                            <Border BorderBrush="#8b6f47" BorderThickness="0,0,0,2" Padding="0,0,0,10" Margin="0,0,0,30">
                                <TextBlock Text="戦術命令" FontSize="20" FontWeight="Bold" Foreground="#5d4037" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                            
                            <!-- 前進ボタン -->
                            <Button Content="前進" IsEnabled="False" Margin="0,0,0,20" Height="60" FontSize="18" FontWeight="Bold">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#f8f3e7"/>
                                        <Setter Property="Foreground" Value="#2b2b2b"/>
                                        <Setter Property="BorderBrush" Value="#8b6f47"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                                            CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <!-- 維持ボタン -->
                            <Button Content="維持" IsEnabled="False" Margin="0,0,0,20" Height="60" FontSize="18" FontWeight="Bold">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#f8f3e7"/>
                                        <Setter Property="Foreground" Value="#2b2b2b"/>
                                        <Setter Property="BorderBrush" Value="#8b6f47"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                                            CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <!-- 後退ボタン -->
                            <Button Content="後退" IsEnabled="False" Height="60" FontSize="18" FontWeight="Bold">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#f8f3e7"/>
                                        <Setter Property="Foreground" Value="#2b2b2b"/>
                                        <Setter Property="BorderBrush" Value="#8b6f47"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                                            CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- 右：戦況ログパネル -->
                    <Border Grid.Column="1" Background="#fdfbf7" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Logs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="14" Margin="0,2" TextWrapping="Wrap" Foreground="#2b2b2b"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- 閉じるボタン -->
                <Border Grid.Row="2" Background="{StaticResource BrushBgPanel}" Padding="20" CornerRadius="0,0,12,12">
                    <Button Content="閉じる" Command="{Binding CloseCommand}" Style="{StaticResource StyleActionButton}" Width="200" Height="50" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
